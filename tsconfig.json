{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "preserveConstEnums": true,
    "target": "es2021",
    "module": "commonjs",
    "lib": ["es5", "es2021"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "typeRoots": [ "node_modules/@types", "types" ],
    "esModuleInterop": true,
    "importsNotUsedAsValues": "error",
    "experimentalDecorators": true,
    "incremental": true
  },
  "exclude": [ "node_modules", "test", "types", "dist", "tools" ]
}
